<Window x:Class="Random_p4S5w0rd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_p4S5w0rd"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="GenButton" Content="Generate" HorizontalAlignment="Center" Height="35" Margin="0,155,0,0" VerticalAlignment="Top" Width="100" Click="GenButton_Click" FontSize="16"/>
        <TextBox x:Name="LengthInput" Height="20" Margin="0,130,0,0" TextWrapping="Wrap" Text="16" VerticalAlignment="Top" Width="84" MaxLength="4" MaxLines="1" UndoLimit="0" HorizontalAlignment="Center"/>
        <TextBox x:Name="MainTextBox" Height="45" Margin="0,5,0,0" TextWrapping="Wrap" Text="GeneratePassword" VerticalAlignment="Top" Width="400" HorizontalAlignment="Center" IsReadOnly="True" IsUndoEnabled="False"/>
        <Button Content="Copy" HorizontalAlignment="Center" Height="27" Margin="0,55,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click"/>

    </Grid>
</Window>
